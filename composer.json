{
    "name": "antoninmasek/laravel-route-directory-macro",
    "description": "Adds Route::loadFromDirectory macro to Route facade, which will load all files with routes inside a directory.",
    "keywords": [
        "Antonin Masek",
        "laravel",
        "laravel-route-directory-macro"
    ],
    "homepage": "https://github.com/antoninmasek/laravel-route-directory-macro",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonin Masek",
            "email": "antonin.masek@icloud.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^7.10.0 || ^8.1.1",
        "orchestra/testbench": "^8.22.0 || ^9.0.0 || ^10.0.0",
        "pestphp/pest": "^2.34 || ^3.8",
        "pestphp/pest-plugin-arch": "^2.7 || ^3.1",
        "pestphp/pest-plugin-laravel": "^2.4 || ^3.2",
        "spatie/laravel-ray": "^1.40"
    },
    "autoload": {
        "psr-4": {
            "AntoninMasek\\LaravelRouteDirectoryMacro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntoninMasek\\LaravelRouteDirectoryMacro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AntoninMasek\\LaravelRouteDirectoryMacro\\LaravelRouteDirectoryMacroServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
